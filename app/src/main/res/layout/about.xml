<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.raj.granol.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="30dp"
    card_view:contentPadding="5dp"
    android:id="@+id/cv">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="About_us"
        android:textColor="@color/DarkRed"
        android:textSize="45dp"
        android:textStyle="bold"
        android:id="@+id/text1"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="With over 15 years of experience, Landgrace brings to customers their new venture in Vitrified Tiles: Granoland. With this, Landgrace has taken a step ahead in defining the art of fine living. Be mesmerized as designs from Granoland will set new benchmarks in ceramic tiles. With new technology in manufacturing, Granoland has arrived in Morbi, the Ceramic Capital of Gujarat, India.

Flagship products made with Double Charge Technology &amp; others are a perfect example of manufacturing excellence &amp; creative design aesthetics. With this, Granoland shall carve a place in ceramic tiles market effortlessly &amp; fruitfully. Granoland tiles are available in various shapes, colors &amp; sizes. Continuous product development will furnish many more designs &amp; finishes that shall create their own places in hearts &amp; homes of many."
        android:textSize="20dp"
        android:textColor="@color/Black"
        android:layout_margin="@dimen/activity_horizontal_margin"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/text1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/text1" />
        <TextView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:text="An innovative approach in designing tiles, whose Quality &amp; Creativity is unmatched by any. With Double Charge Technology, supercharge your life with excellent design choices."
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:layout_margin="@dimen/activity_horizontal_margin"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/text2"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/text2" />
    </LinearLayout>

</android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="30dp"
                card_view:contentPadding="5dp"
                android:id="@+id/cv1">

                <TextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text4"
                    android:text="Mission"
                    android:textSize="35dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:textAlignment="center"
                    android:textColor="@color/DarkRed"
                    android:textStyle="bold"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    app:layout_constraintRight_toRightOf="@+id/text3"
                    app:layout_constraintTop_toBottomOf="@+id/text3"
                    tools:layout_constraintLeft_creator="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text12"
                    android:text="We believe in taking customers into complete confidence by adherence to strict service standards &amp; delivery of products in a timely manner. "
                    android:textSize="20dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    tools:layout_constraintTop_creator="1"
                    tools:layout_constraintRight_creator="1"
                    app:layout_constraintRight_toRightOf="@+id/text4"
                    app:layout_constraintTop_toBottomOf="@+id/text4"
                    tools:layout_constraintLeft_creator="1"
                    />

            </android.support.v7.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:text="Vision"
                android:textSize="35dp"
                android:textColor="@color/DarkRed"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/text12"
                app:layout_constraintTop_toBottomOf="@+id/text12"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/text12" />

            <TextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:text="Eventually this shall make us a one-stop-shop for all kinds of ceramic products."
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textColor="@color/black"
                tools:layout_constraintTop_creator="1"
                app:layout_constraintTop_toBottomOf="@+id/text5"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/text5" />

            <TextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:textAlignment="center"
                android:text="Quality Policy"
                android:textSize="35dp"
                android:textColor="@color/DarkRed"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_horizontal_margin"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/text6"
                app:layout_constraintTop_toBottomOf="@+id/text6"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/text6" />

            <TextView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:id="@+id/text8"
                android:textAlignment="center"
                android:text="Continuous quality improvement requires a consummate investment in manpower, creative brains &amp; manufacturing machines. In this, we maintain a proactive approach, wherein differing points of view are well considered &amp; consumer inputs make us adopt the latest in everything."
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_horizontal_margin"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/text7"
                app:layout_constraintTop_toBottomOf="@+id/text7"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/text7" />
        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
